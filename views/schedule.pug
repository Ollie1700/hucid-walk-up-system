extends layout

block content

    .inner#schedule-page
        h1.page-title Schedule
        .row.ecis-card
            .col-4
                p
                    strong Search By Speaker
                p
                    select.custom-select.schedule-filter(data-fid='speaker')
                        option All
                        option Charles Pennington
                        option Benjamin Campbellssonn
                        option Michael NPM
            .col-4
                p
                    strong Search By Topic
                p
                    select.custom-select.schedule-filter(data-fid='topic')
                        option All
                        option Google Cloud
                        option NPM
                        option JavaScript
                        option Marketing
            .col-4
                p
                 strong Search By Time
                p
                    select.custom-select.schedule-filter(data-fid='time')
                        option All
                        option 09:00
                        option 11:00
                        option 14:00
                        option 15:00
            .col-4
                p
                    strong Search By Date
                p
                    select.custom-select.schedule-filter(data-fid='date')
                        option All
                        option Monday 16th July
                        option Tuesday 17th July
            .col-4.d-flex.align-items-center
                button.btn.btn-primary#clear-filters Clear Filters
        .row.num-results-row
            .col-12.text-center
                strong
                    span#results-found 10 results found
        .row.result.display(data-speaker='Michael NPM', data-topic='Introduction to Google Cloud', data-time='15:00', data-date='Tuesday 17th July')
